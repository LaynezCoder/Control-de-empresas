<!DOCTYPE html>
<html>

<head>
    <style>
        table {
            width: 100%;
            background-color: white;
            border-collapse: collapse;
            text-align: left;
        }

        tr:nth-child(odd) {
            background-color: #f2f2f2;
        }

        td {
            border: solid 1px #ddd;
            padding: 8px;
        }

        th {
            padding: 15px;
            color: #eee;
            background-color: #4CAF50;
            text-align: left;
        }
    </style>
</head>

<body>
    <div style="width: 85%; margin: 0 7.5%;">
        <div style="text-align: center;">
            <h3>Employees Report</h5>
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Puesto</th>
                            <th>Departamento</th>
                        </tr>
                    </thead>

                    <% if (employees.length> 0) { %>
                        <% employees.forEach(employee=> {%>
                            <tr>
                                <td>
                                    <%= employee._id %>
                                </td>
                                <td>
                                    <%= employee.name %>
                                </td>
                                <td>
                                    <%= employee.job %>
                                </td>
                                <td>
                                    <%= employee.departament %>
                                </td>
                            </tr>
                            <% });%>
                                <% }%>
                </table>
        </div>
    </div>
</body>

</html>